pipeline {
    agent any
    environment {
        GIT_CREDENTIALS = '2bca4d7a-a0e0-4d3b-94ff-6132af7f7c41' 
        DOCKER_CREDENTIALS = 'docker-hub-credential'
        IMAGE_REPO = "htp9992/mdm-repo"

    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    git credentialsId: "${GIT_CREDENTIALS}", url: 'https://Hitesh@github.com/asifcopilot/mdm.git', branch: 'main'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building python docker image..."
                    def imageTag = "${BUILD_NUMBER}"
                    sh "sudo docker build -t ${IMAGE_REPO}:${imageTag} ."
                }
            }
        }
        stage('Push Image to docker hub') {
            steps{
                script {
                    def imageTag = "${BUILD_NUMBER}"
                    withCredentials([usernamePassword(credentialsId: DOCKER_CREDENTIALS, usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh "echo $DOCKER_PASSWORD | sudo docker login --username $DOCKER_USERNAME --password-stdin"
                    }
                    sh "sudo docker push ${IMAGE_REPO}:${imageTag}"
                }
            }
        }
        stage('Build Docker Container ...') {
            steps{
                script {
                    echo "Building python Container ..."
                    def imageTag = "${BUILD_NUMBER}"
                    sh "sudo docker run -d -p 8000:8000 ${IMAGE_REPO}:${imageTag}"
                }
            }
        }
    }
}
