pipeline {
    agent any
    environment {
        GIT_CREDENTIALS = 'github-credentials-id' 
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    git credentialsId: "${GIT_CREDENTIALS}", url: 'https://github.com/asifcopilot/mdm.git', branch: 'main'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building python docker image..."
                    sh 'sudo docker build -t python .'
                }
            }
        }
        stage('Build Docker Container ...') {
            steps{
                script {
                    echo "Building python Container ..."
                    sh "sudo docker run -d -p 8000:8000 python"
                }
            }
        }
    }
}